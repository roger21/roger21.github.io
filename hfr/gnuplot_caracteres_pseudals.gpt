# le graph

unset multiplot
reset session
reset
set encoding utf8
set terminal svg size 1600,900 dynamic name "hfr_caracteres_pseudals_svg" font "Verdana,Arial,Sans-serif,Helvetica,14" background "#ffffff"
set output "hfr_caracteres_pseudals.svg"
set mytics 4
set key at 280,737500 center right Left opaque reverse samplen 3 box spacing 1.3 width -7.5 height .2
set grid ytics mytics back lc "#3f3f3f" dt (10,10), lc "#7f7f7f" dt (10,10)
set title "{/:Bold=18 hfr : l'occurence des caractères dans les pseudals\n{/=12 (données collectées entre le 21 mars 2019 à 02:55:05 et le 26 mars 2019 à 20:54:41)"
set xlabel "{/=16 les carcatères" offset 0,0.9
set ylabel "{/=16 l'occurence du caractère"
set xtics nomirror out scale 0.5 offset 0,0.8 center
set style fill transparent solid 0.4
set key tc variable

plot [-1:293][0:800000]\
"data_caracteres_pseudals.txt" u 0:1:xtic("{/:Bold=5 ".strcol(2)) w boxes lw 2 lc rgbcolor "#003fbf" title "{/:Bold l'occurence des caractères dans les pseudals"

set output


