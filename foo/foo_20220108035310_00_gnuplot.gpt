

# Le nombre de posts foot versus covid-19

unset multiplot
reset session
reset
set locale "french"
set encoding utf8
set terminal svg size 1920, 1080 dynamic mouse standalone name "foo_20220108035310_41_foot_versus_covid" font "Verdana,Arial,Sans-serif,Helvetica,14" dashlength 2 linewidth 1 background "#ffffff"
set output "foo_20220108035310_41_foot_versus_covid.svg"
set title "{/:Bold=18 Le topic foot versus le topic COVID-19 en nombre de posts en 2021\n{/:Bold=14 (données collectées le samedi 8 janvier 2022 à 03:53:10)"
set key at graph .02, graph .975 top left Left opaque reverse samplen 3 box spacing 1.2 height .4 width -5
set xtics ("2006" 1136073600, "2007" 1167609600, "2008" 1199145600, "2009" 1230768000, "2010" 1262304000, "2011" 1293840000, "2012" 1325376000, "2013" 1356998400, "2014" 1388534400, "2015" 1420070400, "2016" 1451606400, "2017" 1483228800, "2018" 1514764800, "2019" 1546300800, "2020" 1577836800, "2021" 1609459200, "2022" 1640995200, "2023" 1672531200, "2024" 1704067200, "2025" 1735689600, "2026" 1767225600, "2027" 1798761600, "2028" 1830297600, "2029" 1861920000, "2030" 1893456000, "2031" 1924992000, "2032" 1956528000) rotate
set ytics 0, 500000
set mytics 2
set grid xtics mxtics ytics mytics back lc "#3f3f3f", lc "#9f9f9f"
set format y "%'.0f"
set xdata time
set timefmt "%s"
set format x "%F %T"
set mouse mouseformat "DateTime"

set size .985,1
set origin .015,0

set fit quiet nolog limit 1e-30
reglin_foot(x)=af*x+bf
fit reglin_foot(x) "foo_20220108035310_00_data_count_posts_foot_2021.txt" via af,bf
reglin_foot_all(x)=afa*x+bfa
fit reglin_foot_all(x) "foo_20220108035310_00_data_count_posts_foot.txt" via afa,bfa
reglin_covid(x)=ac*x+bc
fit reglin_covid(x) "foo_20220108035310_00_data_count_posts_covid_2021.txt" via ac,bc
reglin_covid_all(x)=aca*x+bca
fit reglin_covid_all(x) "foo_20220108035310_00_data_count_posts_covid.txt" via aca,bca

x_all=(bca-bfa)/(afa-aca)
y_all=reglin_foot_all(x_all)
x_last=(bc-bf)/(af-ac)
y_last=reglin_foot(x_last)

set label 1 "tendances\nglobales" noenhanced at x_all,y_all center tc rgbcolor "#ff8f00" point ps 1 pt 7 lc rgbcolor "#ff8f00" front offset -6.5,1.4

set label 2 "tandances\n2021" noenhanced at x_last,y_last center tc rgbcolor "#ff4f00" point ps 1 pt 7 lc rgbcolor "#ff4f00" front offset 6.5,-1

plot [1136073600:1956528000][0:5000000] \
reglin_foot_all(x) lw 2 lc rgbcolor "#00ffbf" title "tendance globale du topic foot", \
reglin_foot(x) lw 2 lc rgbcolor "#00bf7f" title "tendance 2021 du topic foot", \
"foo_20220108035310_00_data_count_posts_foot.txt" u 1:2 w line lw 2 lc rgbcolor "#007fff" title "posts all time du topic foot", \
reglin_covid_all(x) lw 2 lc rgbcolor "#ff00bf" title "tendance globale du topic COVID-19", \
reglin_covid(x) lw 2 lc rgbcolor "#bf007f" title "tendance 2021 du topic COVID-19", \
"foo_20220108035310_00_data_count_posts_covid.txt" u 1:2 w line lw 2 lc rgbcolor "#7f00ff" title "posts all time du topic COVID-19"

set output


